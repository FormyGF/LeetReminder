<div style="height: 200px; text-align:center;line-height:200px;">
</div>
<div class="row">
	<div class="col-sm-4 col-sm-offset-4">
		<form id="static-form" method="post">
			<div class="form-group">
				<label for="userEmailAddress" class="label label-default center-block" style="background-color: white; color: black; font-size: 25px;">Your Email Address</label>
				<input type="text" class="form-control" id="userEmailAddress" name="userEmailAddress" placeholder="example@gmail.com" value="{{clientEmailAddress}}">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-default center-block">Submit</button>
			</div>
			{{#if error}}
			<div class="form-group" id="error-container">
				<div class="alert alert-danger text-goes-here">
					{{error}}
				</div>
			</div>
			{{/if}}
			{{#if message}}
			<div class="form-group" id="result-container">
				<div class="alert alert-success text-goes-here">
					{{message}}
					{{feedback}}
				</div>
			</div>
			{{/if}}
		</form>
	</div>
</div>