<div class="row">
	<div class="col-sm-12">
		<form id="static-form" method="post">
			<div class="form-group">
				<label for="userEmailAddress">Your Email Address</label>
				<input type="text" class="form-control" id="userEmailAddress" name="userEmailAddress" placeholder="xxx@xxx.xxx" value="{{clientEmailAddress}}">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-default">Submit</button>
			</div>
			{{#if error}}
			<div class="form-group" id="error-container">
				<div class="alert alert-danger text-goes-here">
					{{error}}
				</div>
			</div>
			{{/if}}
			{{#if message}}
			<div class="form-group" id="result-container">
				<div class="alert alert-success text-goes-here">
					{{message}}
					{{feedback}}
				</div>
			</div>
			{{/if}}
		</form>
	</div>
</div>